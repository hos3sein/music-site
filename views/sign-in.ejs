<body>
    <div id="bg" class="container-fluid">
        <div id="menu" class="container-fluid  d-flex justify-content-center" >
<!-- sign-in form  -->
            <form action="/auth" method="post" id="fs" class="form-control">
                <div style=" margin-top: 2%; " class="row mb-1 ">
                  <!-- <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label> -->
                  <div class="col-sm-10">
                    <input name="username" style="   border-radius: 10px 0px 10px 0px; background-color: #ffffffa1;" placeholder="username" type="email" class="form-control" id="input1" onmouseover="document.getElementById('input1').style.boxShadow='5px 5px  90px 5px blue'; " onmouseleave="document.getElementById('input1').style.boxShadow= 'none';" >
                  </div>
                </div>
                <div  class="row mb-3">
                  <!-- <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label> -->
                  <div class="col-sm-10">
                    <input name="password" style=" margin-top: 5%; border-radius: 10px 0px 10px 0px; background-color: #ffffffa1;" placeholder="password" type="password" class="form-control" id="input2"  onmouseover="document.getElementById('input2').style.boxShadow='5px 5px  90px 5px blue'; " onmouseleave="document.getElementById('input2').style.boxShadow= 'none';" >
                  </div>
                </div>  
                <button id="B"  onmouseover="document.getElementById('B').style.boxShadow='5px 5px  90px 5px blue'; " onmouseleave="document.getElementById('B').style.boxShadow= 'none';" style=" margin-top: 3%; color: black; background-color: #ffffffa1;; margin-left: 4%;" type="submit" class="btn btn-primary">log in</button>
                <a href="signUp" class="container-fluid d-flex" style="margin-top: 5%; margin-left: 7%;" id="link" >dont have an account??</a>
              </form>

        </div>
    </div>
    
